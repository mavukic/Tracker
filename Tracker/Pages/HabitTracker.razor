        padding-left: 10px;
    }

    /* Day Cell Styling */
    .day-cell {
        width: 25px;
        height: 25px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .day-cell.not-completed {
            background-color: white;
            border: 1px solid #ccc;
        }

        .day-cell.completed {
            background-color: #4CAF50;
        }

        /* Hover Effects */
        .day-cell:hover {
            background-color: #d4edda;
            border: 1px solid #4CAF50;
        }

    .month-navigation {
        display: flex;
        align-items: center;
        justify-content: center;
