        border-right-color: black; /* Change to desired color */
        left: 10px;
    }

    .arrow-button.right::before {
        border-left-color: black; /* Change to desired color */
        right: 10px;
    }

    .calendar-navigation span {
        font-size: 18px;
        font-weight: bold;
        margin: 0 10px;
    }
    /* Calendar Navigation */
    .calendar-navigation {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
    }

        .calendar-navigation button {
            background-color: #4CAF50;
            border: none;
            color: white;
            padding: 10px;
            margin: 0 5px;
            cursor: pointer;
            font-size: 16px;
        }

        .calendar-navigation span {
            font-size: 18px;
            font-weight: bold;
        }

    /* Table Styling */
    .habit-tracker-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .habit-tracker-table th, .habit-tracker-table td {
