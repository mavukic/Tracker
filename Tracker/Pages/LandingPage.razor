@page "/"
@inject NavigationManager NavigationManager

<div class="landing-page">
    <div class="header">
        <h1>Welcome to Habit Tracker Pro</h1>
        <p>Your personalized habit tracker to build consistency and achieve your goals.</p>
        <button @onclick="NavigateToTracker" class="cta-button">Get Started</button>
    </div>

    <div class="features">
        <div class="feature-cards">
            <div class="feature-card">
                <h3>Track Your Progress</h3>
            </div>
            <div class="feature-card">
                <h3>Personalized Habit Colors</h3>
            </div>
            <div class="feature-card">
                <h3>Responsive Design</h3>
            </div>
        </div>
    </div>

    <footer class="footer">
        <p>&copy; 2024 Habit Tracker Pro. All rights reserved.</p>
        <a href="https://github.com/yourgithubrepo" target="_blank">GitHub</a>
    </footer>
</div>

@code {
    private void NavigateToTracker()
    {
        NavigationManager.NavigateTo("/add-habit");
    }
}

